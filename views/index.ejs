<div class="author">
    <h1 class="author__heading">Hei! I am Linh.</h1>
    <p class="author__body">Web Developer and lifelong learner.</p>

</div>

<img src="/images/blog.jpg" alt="person" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="article__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id%>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="article-list__date">
                        <%=post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>

    <% if (nextPage !==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>



</section>